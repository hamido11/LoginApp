<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/student" />

    <EditText
        android:id="@+id/et_email"
        android:hint="Enter email"
        android:background="#11000000"
        android:textColor="#ffffff"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_below="@id/iv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:drawableLeft="@mipmap/email_icon"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/et_password"
        android:hint="Enter password"
        android:layout_width="250dp"
        android:drawableLeft="@mipmap/password_icon"
        android:background="#11000000"
        android:textColor="#ffffff"
        android:layout_height="36dp"
        android:layout_below="@id/et_email"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@id/et_email"
        android:layout_alignStart="@id/et_email"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bt_login"
        android:background="@drawable/button_rectangle_pink"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="login" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:text="Register Here"
        />



</RelativeLayout>